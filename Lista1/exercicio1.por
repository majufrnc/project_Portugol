programa {
	funcao inicio() {

	    inteiro anos, meses, dias
	    inteiro resultado
	    
	    escreva("Quantia de anos: ")
	    leia(anos)
	    
	    escreva("Quantia de meses: ")
	    leia(meses)
	    
	    escreva("Quantia de dias: ")
	    leia(dias)
	    
	   resultado = (anos*365)+(meses*30)+(dias)
	   
	   escreva("Idade expressa em dias: "+resultado+" dias de vida")
	}
}
